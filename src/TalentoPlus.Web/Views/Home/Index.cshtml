@{
    ViewData["Title"] = "Inicio";
    ViewData["FullWidth"] = true;
}

<!-- Hero Section with Glassmorphism -->
<div class="hero-wrapper">
    <div class="hero-background"></div>
    <div class="hero-gradient"></div>
    
    <div class="container position-relative" style="z-index: 2;">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 py-5">
                <div class="hero-content">
                    <div class="badge-welcome mb-4">
                        <i class="fas fa-sparkles me-2"></i>Sistema de Gestión de RRHH
                    </div>
                    <h1 class="hero-title mb-4">
                        Gestiona tu
                        <span class="gradient-text">TalentoPlus</span>
                        de manera inteligente
                    </h1>
                    <p class="hero-subtitle mb-5">
                        Plataforma integral para la administración de recursos humanos con IA,
                        reportes avanzados y automatización de procesos.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn-primary-custom">
                            <i class="fas fa-chart-line me-2"></i>Ver Dashboard
                            <span class="btn-shine"></span>
                        </a>
                        <a asp-controller="Employees" asp-action="Index" class="btn-secondary-custom">
                            <i class="fas fa-users me-2"></i>Gestionar Empleados
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-illustration">
                    <div class="glass-card main-card">
                        <div class="card-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <h3>2,847</h3>
                        <p>Empleados Activos</p>
                        <div class="stat-indicator positive">
                            <i class="fas fa-arrow-up"></i> 12.5%
                        </div>
                    </div>
                    <div class="glass-card secondary-card card-1">
                        <div class="mini-icon" style="background: linear-gradient(135deg, #F59E0B, #D97706);">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <span>Reportes PDF</span>
                    </div>
                    <div class="glass-card secondary-card card-2">
                        <div class="mini-icon" style="background: linear-gradient(135deg, #10B981, #059669);">
                            <i class="fas fa-robot"></i>
                        </div>
                        <span>Chatbot IA</span>
                    </div>
                    <div class="glass-card secondary-card card-3">
                        <div class="mini-icon" style="background: linear-gradient(135deg, #8B5CF6, #7C3AED);">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <span>Analytics</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Animated Circles -->
    <div class="floating-circle circle-1"></div>
    <div class="floating-circle circle-2"></div>
    <div class="floating-circle circle-3"></div>
</div>

<!-- Features Cards Section -->
<div class="features-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="feature-box" data-aos="fade-up" data-aos-delay="0">
                    <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #3B82F6, #2563EB);">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4>Gestión de Empleados</h4>
                    <p>Control total del personal con perfiles completos y actualizables</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="feature-box" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #10B981, #059669);">
                        <i class="fas fa-file-excel"></i>
                    </div>
                    <h4>Importación Excel</h4>
                    <p>Carga masiva de datos desde hojas de cálculo de forma rápida</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="feature-box" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #EF4444, #DC2626);">
                        <i class="fas fa-file-pdf"></i>
                    </div>
                    <h4>Reportes PDF</h4>
                    <p>Genera hojas de vida profesionales en un solo clic</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="feature-box" data-aos="fade-up" data-aos-delay="300">
                    <div class="feature-icon-wrapper" style="background: linear-gradient(135deg, #8B5CF6, #7C3AED);">
                        <i class="fas fa-robot"></i>
                    </div>
                    <h4>Chatbot con IA</h4>
                    <p>Consultas inteligentes con Google Gemini AI</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="benefits-section">
    <div class="container">
        <div class="text-center mb-5">
            <div class="section-subtitle">Funcionalidades</div>
            <h2 class="section-title">Todo lo que necesitas en un solo lugar</h2>
            <p class="section-description">Herramientas profesionales para la gestión moderna de recursos humanos</p>
        </div>
        
        <div class="row g-5 align-items-center">
