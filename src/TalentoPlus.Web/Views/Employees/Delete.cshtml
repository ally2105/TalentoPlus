@model TalentoPlus.Application.DTOs.Employees.EmployeeDto

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                    <h4 class="mb-0">¿Estás seguro?</h4>
                </div>
                <div class="card-body text-center p-5">
                    <p class="lead mb-4">
                        Estás a punto de eliminar al empleado:
                        <br />
                        <strong>@Model.FullName</strong>
                    </p>
                    <p class="text-muted mb-4">
                        Esta acción marcará al empleado como "Retirado" y desactivará su acceso. No se borrarán los datos históricos.
                    </p>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-block">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
