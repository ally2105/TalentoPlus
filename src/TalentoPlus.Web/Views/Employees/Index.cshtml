@model IEnumerable<TalentoPlus.Application.DTOs.Employees.EmployeeListDto>

@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-users me-2 text-primary"></i>Empleados
            </h1>
            <p class="text-muted mb-0">Gestión completa del personal</p>
        </div>
        <div class="btn-group shadow-sm">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-file-excel me-2"></i>Importar
            </button>
            <form asp-action="DeleteAll" method="post" class="d-inline" onsubmit="return confirm('¿ESTÁS SEGURO? Esto borrará TODOS los empleados, cargos y departamentos. No se puede deshacer.');">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Borrar Todo
                </button>
            </form>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuevo Empleado
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@Html.Raw(TempData["WarningMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Modal Importación -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="importModalLabel">Importar Empleados desde Excel</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Import" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="file" class="form-label">Seleccione el archivo (.xlsx)</label>
                            <input type="file" class="form-control" name="file" accept=".xlsx" required>
                        </div>
                        <div class="alert alert-info small">
                            <strong>Formato esperado:</strong><br/>
                            Col A: Tipo Doc | Col B: Num Doc<br/>
                            Col C: Nombres | Col D: Apellidos<br/>
                            Col E: Email | Col F: Departamento<br/>
                            Col G: Cargo | Col H: Salario<br/>
                            Col I: Fecha Ingreso
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload me-2"></i>Subir y Procesar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Empleados</h6>
            <form asp-action="Index" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control border-end-0" placeholder="Buscar..." value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-outline-secondary border-start-0" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Empleado</th>
                            <th>Documento</th>
                            <th>Cargo</th>
                            <th>Departamento</th>
                            <th>Estado</th>
                            <th>Fecha Ingreso</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fas fa-user-slash fa-3x mb-3 d-block"></i>
                                    No se encontraron empleados registrados.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-initial rounded-circle bg-primary text-white me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-weight: bold;">
                                                @item.FullName.Substring(0, 1)
                                            </div>
                                            <div>
                                                <div class="fw-bold">@item.FullName</div>
                                                <div class="small text-muted">@item.PersonalEmail</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.DocumentNumber</td>
                                    <td>@item.JobPositionTitle</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @item.DepartmentName
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = item.Status switch
                                            {
                                                TalentoPlus.Domain.Enums.EmployeeStatus.Activo => "bg-success",
                                                TalentoPlus.Domain.Enums.EmployeeStatus.Inactivo => "bg-secondary",
                                                TalentoPlus.Domain.Enums.EmployeeStatus.Vacaciones => "bg-info",
                                                TalentoPlus.Domain.Enums.EmployeeStatus.LicenciaMedica => "bg-warning text-dark",
                                                TalentoPlus.Domain.Enums.EmployeeStatus.Retirado => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@item.Status</span>
                                    </td>
                                    <td>@item.HireDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a asp-action="DownloadResume" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Descargar HV">
                                                <i class="fas fa-file-pdf"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <small class="text-muted">Mostrando @Model.Count() registros</small>
        </div>
    </div>
</div>
