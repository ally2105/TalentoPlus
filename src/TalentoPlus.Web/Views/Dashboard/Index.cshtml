@model TalentoPlus.Application.DTOs.Dashboard.DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Dashboard General</h1>
            <p class="text-muted mb-0">Visión general de la gestión de talento humano</p>
        </div>
        <div>
            <a asp-controller="Employees" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-users me-2"></i>Gestionar Empleados
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-primary text-uppercase mb-1">Total Empleados</div>
                            <div class="h2 mb-0 fw-bold text-gray-800">@Model.TotalEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-success text-uppercase mb-1">Empleados Activos</div>
                            <div class="h2 mb-0 fw-bold text-gray-800">@Model.ActiveEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-warning text-uppercase mb-1">Departamentos</div>
                            <div class="h2 mb-0 fw-bold text-gray-800">@Model.EmployeesByDepartment.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-danger text-uppercase mb-1">Inactivos / Retirados</div>
                            <div class="h2 mb-0 fw-bold text-gray-800">@Model.InactiveEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Bar Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
                    <h6 class="m-0 fw-bold text-primary">Empleados por Departamento</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="departmentChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
                    <h6 class="m-0 fw-bold text-primary">Estado de Empleados</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- AI Section (US-09) -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 bg-gradient-primary-to-secondary" style="background: linear-gradient(45deg, #4e73df, #224abe);">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-7 text-white">
                            <h3 class="fw-bold mb-2"><i class="fas fa-robot me-2"></i>Asistente IA TalentoPlus</h3>
                            <p class="mb-4 text-white-50">Pregunta sobre tus datos en lenguaje natural. Ej: "¿Cuántos empleados hay en Sistemas?", "¿Cuál es el salario promedio?".</p>
                            
                            <div class="input-group mb-3">
                                <input type="text" id="aiQuestion" class="form-control form-control-lg border-0" placeholder="Escribe tu pregunta aquí..." aria-label="Pregunta IA">
                                <button class="btn btn-light text-primary fw-bold px-4" type="button" id="btnAskAI">
                                    <i class="fas fa-paper-plane me-2"></i>Preguntar
                                </button>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="card border-0 shadow-lg" style="min-height: 200px; background-color: rgba(255, 255, 255, 0.95);">
                                <div class="card-body">
                                    <h6 class="fw-bold text-primary mb-3">Respuesta:</h6>
                                    <div id="aiResponse" class="text-primary">
                                        <p class="text-muted fst-italic small">La respuesta aparecerá aquí...</p>
                                    </div>
                                    <div id="aiLoading" class="text-center d-none py-3">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Cargando...</span>
                                        </div>
                                        <p class="small text-muted mt-2">Analizando datos...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Lógica del Chat IA
        document.getElementById('btnAskAI').addEventListener('click', askAI);
        document.getElementById('aiQuestion').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') askAI();
        });

        function askAI() {
            var question = document.getElementById('aiQuestion').value;
            if (!question.trim()) return;

            var responseDiv = document.getElementById('aiResponse');
            var loadingDiv = document.getElementById('aiLoading');
            
            responseDiv.classList.add('d-none');
            loadingDiv.classList.remove('d-none');

            fetch('/Dashboard/AskAI', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ question: question })
            })
            .then(response => response.json())
            .then(data => {
                loadingDiv.classList.add('d-none');
                responseDiv.classList.remove('d-none');
                
                if (data.success) {
                    responseDiv.innerHTML = `<p class="lead mb-0">${data.answer}</p>`;
                } else {
                    responseDiv.innerHTML = `<p class="text-danger">${data.answer}</p>`;
                }
            })
            .catch(error => {
                loadingDiv.classList.add('d-none');
                responseDiv.classList.remove('d-none');
                responseDiv.innerHTML = `<p class="text-danger">Error de conexión: ${error}</p>`;
            });
        }

        // Configuración Chart.js (existente)
        Chart.defaults.font.family = 'Nunito, -apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
        Chart.defaults.color = '#858796';

        // Datos Departamentos
        var ctxDept = document.getElementById("departmentChart");
        var deptChart = new Chart(ctxDept, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DepartmentLabels)),
                datasets: [{
                    label: "Empleados",
                    backgroundColor: "#4e73df",
                    hoverBackgroundColor: "#2e59d9",
                    borderColor: "#4e73df",
                    data: @Html.Raw(Json.Serialize(Model.DepartmentValues)),
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: { padding: { left: 10, right: 25, top: 25, bottom: 0 } },
                scales: {
                    x: { grid: { display: false, drawBorder: false }, ticks: { maxTicksLimit: 6 } },
                    y: { ticks: { maxTicksLimit: 5, padding: 10, callback: function(value) { return value; } }, grid: { color: "rgb(234, 236, 244)", zeroLineColor: "rgb(234, 236, 244)", drawBorder: false, borderDash: [2], zeroLineBorderDash: [2] } },
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyColor: "#858796",
                        titleMarginBottom: 10,
                        titleColor: '#6e707e',
                        titleFont: { size: 14 },
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: false,
                        intersect: false,
                        mode: 'index',
                        caretPadding: 10,
                    }
                }
            }
        });

        // Datos Estados
        var ctxStatus = document.getElementById("statusChart");
        var statusChart = new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.EmployeesByStatus.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.EmployeesByStatus.Values)),
                    backgroundColor: ['#1cc88a', '#e74a3b', '#f6c23e', '#36b9cc'],
                    hoverBackgroundColor: ['#17a673', '#be2617', '#dda20a', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, position: 'bottom' },
                    tooltip: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyColor: "#858796",
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: false,
                        caretPadding: 10,
                    }
                },
                cutout: '80%',
            },
        });
    </script>
}
